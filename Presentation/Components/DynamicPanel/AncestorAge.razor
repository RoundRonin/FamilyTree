@using FamilyTreeBlazor.presentation.Components.Elements
@using FamilyTreeBlazor.BLL.DTOs

<h3>Ancestor age</h3>

<h5>Person</h5>
<PersonInfo Person=person />

<br />
<h5>Ancestor</h5>
<PersonInfo Person=ansestor />

<hr />
<h5>Ancestor's age at the moment of person's birth</h5>
@if (age != null && age > 0)
{
    <LabelValuePair Label="result" Value=@age.ToString() />
}
else
{
    <LabelValuePair Label="result" Value="unable to calculate age"/>
}

@code {
    PersonDTO person = new("Test Testov", new(1999, 10, 5), true, 1);
    PersonDTO ansestor = new("Ancestor Testov", new(1999, 10, 5), true, 1);
    int? age = 17;
}
